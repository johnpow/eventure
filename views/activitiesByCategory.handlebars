<div id="parent">
{{#each activities as |activity| }}
<div class="container my-3 py-1">
    <div class="row justify-content-center">
      <div class="col-lg-8">
        <div class="bg-light p-4">
          <div class="d-flex justify-content-between">
            <h3>{{activity.activity_title}}</h3>
            <h6 class="mt-2">Posted by {{activity.user.username}}</h6>
          </div>
          <p>{{activity.activity_description}}</p> 
          <p><b>Date and Time: </b>{{activity.activity_date}}</p>
          <p><b>Location: </b>{{activity.activity_location}}</p> 
              <div class="d-flex justify-content-between align-items-center">

                <button
                  class="btn btn-outline-primary btn-sm signupBtn"
                  data-id="{{activity.id}}"
                  type="button"
                  data-bs-toggle="collapse"
                  data-bs-target="#add-comment-form{{activity.id}}"
                  aria-expanded="false"
                  aria-controls="add-comment-form"
                >Sign-up</button>
                <button
                  class="btn btn-outline-primary btn-sm dropSupBtn"
                  data-id="{{activity.id}}"
                  type="button"
                  data-bs-toggle="collapse"
                  data-bs-target="#add-comment-form{{activity.id}}"
                  aria-expanded="false"
                  aria-controls="add-comment-form"
                >Drop Activity</button>
                <button
                  class="btn btn-outline-dark btn-sm "
                  id="view-comment-btn"
                  type="button"
                  data-bs-toggle="collapse"
                  data-bs-target="#view-comment-list{{activity.id}}"
                  aria-expanded="false"
                  aria-controls="view-comment-list"
                >View Attendees</button>
              </div>
              <div class="collapse mt-3" id="view-comment-list{{activity.id}}">
                <ol>
                {{#each activity.signups as |signup|}}
                  <div>
                    <b><li>@{{signup.user.username}}</li></b>
                  </div>
                {{/each}}
                </ol>
              </div>
        </div>
      </div>
    </div>
  </div>
{{/each}}
</div>

<script src="./js/signup.js"></script>

